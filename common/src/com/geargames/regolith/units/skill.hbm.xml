<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.geargames.regolith.units.Skill" table="skill">
        <id name="id" type="int" column="id">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">skill_sequence</param>
            </generator>
        </id>
        <property name="action" column="action" type="byte"/>
        <property name="experience" column="experience" type="short"/>
    </class>
</hibernate-mapping>
