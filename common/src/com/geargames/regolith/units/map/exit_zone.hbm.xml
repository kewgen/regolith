<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.geargames.regolith.units.map.ExitZone" table="exit_zone">
        <id name="id" type="int" column="id">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">exit_sequence</param>
            </generator>
        </id>
        <property name="x" column="x" type="short"/>
        <property name="y" column="y" type="short"/>
        <property name="xRadius" column="x_radius" type="byte"/>
        <property name="yRadius" column="y_radius" type="byte"/>
    </class>
</hibernate-mapping>