<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.geargames.regolith.units.tackle.Tackle" abstract="true">
        <id name="id" type="int" column="id">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">tackle_sequence</param>
            </generator>
        </id>
        <property name="frameId" column="frame_id" type="int"/>
        <property name="name" column="name" type="string"/>
        <property name="weight" column="weight" type="short"/>
    </class>
</hibernate-mapping>
